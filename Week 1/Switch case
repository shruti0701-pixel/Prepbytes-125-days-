

to select one of many code blocks for execution.


#include <iostream>

using namespace std;

int main()
{
   int a;
   cin>>a;
   switch(a){
       case 1:
       cout <<"Sun";
       break;
       
       case 2:
       cout <<"Mon";
       break;
       
       case 3:
       cout <<"Tue";
       break;
       
       case 4:
       cout <<"Wed";
       break;
       
       case 5:
       cout <<"Thur";
       break;
       
       case 6:
       cout <<"Fri";
       break;
       
       case 7:
       cout <<"Sat";
       break;
       
   }
  

    return 0;
}
