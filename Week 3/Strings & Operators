#include <iostream>
#include <string>
using namespace std;
int main()
{
    string str1 = "Shru";
    string str2 = "ti";
    string str3 = "Shruti";
    string str4;
    
    str4 = str1;
    cout<<"str4 = " << str4 << endl;
    
    str4 += str2; // str4 = str4+str2//
    cout<<"str4 after concat and assign= "<<str4<<endl;
    
    if (str3 == str1 + str2){
        cout<<"true"<<endl;
    }
    else{
        cout<<"false"<<endl;
    }

    return 0;
}
